<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sistemadeseguridad">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SistemaDeSeguridad">

        <!-- Registro de la MainActivity como actividad principal -->
        <activity android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Registro de ConfigActivity, pero no como principal -->
        <activity android:name=".ConfigActivity" />
        <activity android:name=".AlertasActivity" />
        <activity android:name=".HistorialActivity" />
        <activity android:name=".AyudaActivity" />

    </application>

</manifest>
